                  <img class="img-responsive hidden-xs" src="<%=asset_path 'logo.png'%>" alt="" />
                  <!-- Heading -->
                  <h1>Recipe of the Day</h1>
                  <!-- Paragraph -->
                  <p class="">Perfect matches for your ingredients</p>

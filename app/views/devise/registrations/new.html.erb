
      <!-- Inner Content -->
      <div class="inner-page padd">
      
        <!-- Checkout Start -->
        
        <div class="checkout">
          <div class="container">
          <!-- Heading -->
          <h4>Sign up</h4>
            <div class="row">
              <div class="col-md-7 col-sm-6">
                <!-- Checkout Form -->
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal", role: "form"} ) do |f| %>
                  <%= devise_error_messages! %>
                  <form class="form-horizontal" role="form">
                    <div class="form-group">
                      <%= f.label :email, class: "col-md-2 control-label" %>
                      <div class="col-md-8">
                        <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail1" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <%= f.label :password, class: "col-md-2 control-label" %>
                      <div class="col-md-8">
                        <%= f.password_field :password, autofocus: true, class: "form-control" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <%= f.label :password_confirmation, "Password Confirmation", class: "col-md-2 control-label" %>
                      <div class="col-md-8">
                        <%= f.password_field :password_confirmation, autofocus: true, class: "form-control" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-md-offset-2 col-md-8">
                        <div><%= f.submit "Sign up", class: "btn btn-danger btn-sm" %></div>
                      </div>
                    </div>
                  </form>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Checkout End -->
      </div><!-- / Inner Page Content End --> 
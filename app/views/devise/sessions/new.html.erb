
      <!-- Inner Content -->
      <div class="inner-page padd">
      
        <!-- Checkout Start -->
        
        <div class="checkout">
          <div class="container">
          <!-- Heading -->
          <h4>Sign in</h4>
            <div class="row">
              <div class="col-md-7 col-sm-6">
                <!-- Checkout Form -->
                <%= render 'layouts/messages' %>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal", role: "form"} ) do |f| %>
                  <form class="form-horizontal" role="form">
                    <div class="form-group">
                      <%= f.label :email, class: "col-md-2 control-label" %>
                      <div class="col-md-8">
                        <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail1" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <%= f.label :password, class: "col-md-2 control-label" %>
                      <div class="col-md-8">
                        <%= f.password_field :password, autofocus: true, class: "form-control" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-md-offset-2 col-md-8">
                        <div class="checkbox">
                          <% if devise_mapping.rememberable? -%>
                            <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
                          <% end -%>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-md-offset-2 col-md-8">
                        <%= render "devise/shared/links" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-md-offset-2 col-md-8">
                        <div><%= f.submit "Login", class: "btn btn-danger btn-sm" %></div>
                      </div>
                    </div>
                  </form>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Checkout End -->
      </div><!-- / Inner Page Content End --> 